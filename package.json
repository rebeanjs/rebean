{
  "name": "rebean-redux",
  "version": "0.0.1",
  "description": "React and Redux reusable beans",
  "main": "index.js",
  "repository": "git@github.com:rebeanjs/rebean.git",
  "author": "Piotr Ole≈õ <piotr.oles@codibly.com>",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "lint": "tslint --project tsconfig.base.json",
    "format": "prettier --write packages/**/src/**/*.{js,json,css,md,ts,scss}",
    "doc": "typedoc --out doc/api packages/ --mode file"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --project tsconfig.base.json --fix",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/redux-mock-store": "^1.0.0",
    "fast-memoize": "^2.5.1",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "redux": "^4.0.1",
    "redux-mock-store": "^1.5.3",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "rollup": "^1.0.1",
    "rollup-plugin-cleaner": "^0.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.18.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.3",
    "tslib": "^1.9.3",
    "tslint": "^5.12.0",
    "typedoc": "^0.14.0",
    "typescript": "^3.1.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  }
}
