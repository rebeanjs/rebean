{
  "name": "rebean",
  "version": "0.0.0-development",
  "description": "Redux and React reusable beans",
  "main": "index.js",
  "repository": "git@github.com:rebeanjs/rebean.git",
  "author": "Piotr Ole≈õ <piotr.oles@codibly.com>",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "lint": "tslint --project tsconfig.base.json",
    "format": "prettier --write packages/**/src/**/*.{json,md,ts,tsx}",
    "doc": "typedoc --out doc/api packages/ --mode file",
    "commit": "npm run lint -- --fix && pretty-quick --staged && npm run test && git add -A && npx git-cz",
    "lerna:version": "lerna version prerelease",
    "lerna:prepublish": "lerna run prepublish",
    "lerna:publish": "lerna publish from-git --yes"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@rebean/snackbar": "file:packages/snackbar"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.5.0",
    "@geut/chan": "^1.3.0",
    "@types/jest": "^24.0.0",
    "@types/redux-mock-store": "^1.0.0",
    "@types/uuid": "^3.4.4",
    "commitlint": "^7.5.2",
    "cz-lerna-changelog": "^2.0.2",
    "fast-memoize": "^2.5.1",
    "husky": "^1.3.1",
    "jest": "^23.0.0",
    "lerna": "^3.11.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "redux": "^4.0.1",
    "redux-mock-store": "^1.5.3",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "rollup": "^1.1.2",
    "rollup-plugin-cleaner": "^0.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.19.2",
    "semantic-release": "^15.13.3",
    "semantic-release-monorepo": "^6.1.1",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.3",
    "tslib": "^1.9.3",
    "tslint": "^5.12.0",
    "typedoc": "^0.14.0",
    "typescript": "^3.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint -- --fix && pretty-quick --staged && npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
